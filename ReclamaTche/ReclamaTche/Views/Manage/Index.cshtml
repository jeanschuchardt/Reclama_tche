@model ReclamaTche.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@User.Identity.Name</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4><span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span> Dashboard</h4>
    <hr />
    @if (ViewBag.erro != null)
    {

        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Não rolou!</strong>  @ViewBag.erro
        </div>

    }


    <div class="container text-center">
        <div class="row">
            <div class="col-sm-3 well">
                <div class="well">
                    <img width="100" height="100" class="img-circle" src="~/Images/usuariosemfoto.png" />
                </div>
            </div>

            <div class="col-sm-7">

                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panel-default text-left">
                            <div class="panel-body">
                                <h3>Minhas Reclamações</h3>
                                <p>
                                    @Html.ActionLink("Abrir Reclamação", "Create", "Reclamacoes",routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                                </p>
                                @{Html.RenderAction("UserList", "Reclamacoes", new { user = User.Identity.Name });}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

